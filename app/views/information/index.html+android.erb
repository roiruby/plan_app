  <div class="container">
    <% breadcrumb :information %>
    <%= render "layouts/breadcrumbs" %>
  </div>
  
  
  <div class="container">
    
    <div class="mt-3">
      <h2><i class="far fa-newspaper mr-2"></i>Pladuce News</h2>
    </div>
    
    <div class="mypage-center mt-4">
          <% @news.each do |news| %>
            <%= link_to news.title, information_path(news) %>
            
            <% if current_user.admin? && !(current_user == User) %>
            <%= link_to "編集", edit_information_path(news), class: 'btn btn-info btn-sm' %>
            <%= link_to "削除", information_path(news), method: :delete, data: { confirm: "本当に削除しますか?" }, class: 'btn btn-danger btn-sm' %>
            <% end %>
            
            <div class="text-right small bold mt-2">
            <i class="far fa-clock"></i><%= news.updated_at.strftime('%Y/%m/%d') %>
            </div>
            <hr>
          <% end %>
        </div>
        
        <div class="pagination justify-content-end pagination-sm">
          <%= paginate @news %>
        </div>
      </div>
    