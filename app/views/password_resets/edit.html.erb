    <div class="container">
      <div class="row mt-3">
        
        <div class="offset-md-3 col-md-6 mt-5">
          <p class="bold h5 mb-1 ml-1">パスワード再設定</p>

          <div class="bg-gray mb-5">
          <%= form_with(url: password_reset_path(params[:id]), model: @user, local: true) do |f| %>

            <%= hidden_field_tag :email, @user.email %>
          
            <strong>新しいパスワードを登録してください。</strong>

              <%= f.password_field :password, placeholder: "パスワード入力", class: 'form-control mt-2' %>

              <%= f.password_field :password_confirmation, placeholder: "パスワード入力 (確認用)", class: 'form-control mt-3' %>
              
            <div class="xsmall mt-2">
              ※パスワードは[半角英数字]6文字以上
            </div>
            
            <div class="text-center mt-4">
              <%= f.submit '登録する', class: 'btn btn-info bold' %>
            </div>
          <% end %>
          
          </div>
        </div>
      </div>
    </div>