        <div class="plan-image">
        <% if f.object.image1? %>
        <%= image_tag f.object.image1.url, id: :img1_prev %>
        <p><%= f.check_box :remove_image1 %>画像を削除する</p>
        <% else %>
        <%= image_tag "default_plan.jpg", id: :img1_prev %>
        <% end %>
        <%= f.file_field :image1, id: :schedule1_img %>
        
        <!--画像即時にプレビューjavascript-->
        <script type="text/javascript">
        $(function() {
         function readURL(input) {
         if (input.files && input.files[0]) {
         var reader = new FileReader();
         reader.onload = function (e) {
           $('#img1_prev').attr('src', e.target.result);
         }
         reader.readAsDataURL(input.files[0]);
         }
         }
         $("#schedule1_img").change(function(){
         readURL(this);
         });
        });
        </script>
        
