          <div class="col-md-3 col-6 prev pl-1 pr-1">
          <% if f.object.image1? %>
            <%= image_tag f.object.image1.url, id: :img1_prev %>
            <p><%= f.check_box :remove_image1 %>画像を削除する</p>
          <% else %>
            <%= image_tag "default_plan1.jpg", id: :img1_prev %>
          <% end %>
          
          <div class="d-lg-none">
            <label>
              <div class="xsmall">
              ファイルを選択
              </div>
              <div class="xsmall upload"><%= f.file_field :image1, class: :schedule1_img %></div>
            </label>
          </div>

            <p class="xsmall d-none d-lg-block"><%= f.file_field :image1, class: :schedule1_img %></p>
          </div>

        
        <!--画像即時にプレビューjavascript-->
        <script type="text/javascript">
        $(function() {
         function readURL(input) {
         if (input.files && input.files[0]) {
         var reader = new FileReader();
         reader.onload = function (e) {
           $(input).parents('.plan-image').find('#img1_prev').attr('src', e.target.result);
         }
         reader.readAsDataURL(input.files[0]);
         }
         }
         $(document).on('change', '.schedule1_img', function(){
         readURL(this);
         });
        });
        </script>

        
