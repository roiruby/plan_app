  <div class="container">
    
    <% if @search_word.present? %>
      <p class="newplan_title mt-4"><i class="fas fa-search mr-2"></i><%= @search_word %>のプラン　<span class="small bold"><%= @plans.count %>プラン</span></p>
    <% else %>
      <p class="newplan_title mt-4"><i class="fas fa-search mr-2"></i>すべてのプラン　<span class="small bold"><%= @plans.count %>プラン</span></p>
    <% end %>
    
    <div class="web-flex row web-mt40">
      <% @plans.each do |plan| %>
        <div class="top-planimage col-md-3">
        <%= link_to image_tag(plan.image.to_s), plan_path(plan) %>
        <p class="top-plantitle"><%= link_to plan.plan_title.truncate(42), plan_path(plan) %></p>
        </div>
      <% end %>
    </div>
  
    <div class="pagination justify-content-end pagination-sm">
      <%= paginate @plans %>
    </div>
    
  </div>