<div class="container">
  <div class="mt-5 h3 bold">
      退会依頼
  </div>
    
  <div class="mt-3">  
  <% @quits.each do|quit| %>
    【<%= quit.id %>】<i class="far fa-clock mr-1"></i><%= quit.created_at.strftime('%Y/%m/%d %H:%M') %>
    <div>
      ユーザーID：【<%= link_to quit.user.id, user_path(quit.user.id) %>】
    </div>
    <div>
      ユーザーネーム：【<%= quit.user.name %>】
    </div>
    <div>
      メールアドレス：【<%= quit.user.email %>】
    </div>
    <div>
      退会理由：<%= quit.content %>
    </div>
    <hr>
  <% end %>
  </div>
      
  <div class="pagination justify-content-end pagination-sm mt-3">
    <%= paginate @quits %>
  </div>
    
</div>