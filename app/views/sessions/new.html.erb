    <div class="container">
      <% breadcrumb :login %>
      <%= render "layouts/breadcrumbs" %>
      <div class="row">
        
        <div class="offset-md-3 col-md-6 mt-4">
          <p class="bold h5 mb-1 ml-1">ログイン</p>

          <div class="bg-gray mb-5">
          <%= form_with(url: login_path, scope: :session, local: true) do |f| %>

            <div class="form-group">
              <%= f.label :email, 'メールアドレス' %>
              <%= f.email_field :email, class: 'form-control' %>
            </div>

            <div class="form-group mb-0">
              <%= f.label :password, 'パスワード' %>
              <%= f.password_field :password, class: 'form-control' %>
            </div>
            
            <div class="form-group mt-2">
            <%= f.label :remember_me, class: "checkbox inline" do %>
              <%= f.check_box :remember_me, class:"align-middle" %>
              <span class="xsmall">次回から自動ログインする</span>
            <% end %>
            </div>
            
            <div class="text-center mt-4">
              <%= f.submit 'ログイン', class: 'btn btn-info bold' %>
            
          <% end %>
          
          <div class="a">
          <p class="mt-3 xsmall">パスワードを忘れた方は<%= link_to 'こちら', new_password_reset_path %></p>
          <p class="web-mt-8 xsmall">新規登録する方は<%= link_to 'こちら', signup_path %></p>
          </div>
          
          </div>
          </div>
        </div>
      </div>
    </div>