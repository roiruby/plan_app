<div class="container">
  
  <%= form_with(url: select_search_path, method: :get, local: true) do |f| %>
    
    <div class="form-row mt-4">

      <div class="form-group col-sm-3">
        <!--<%= f.collection_select :prefecture, Prefecture.all, :id, :name, {include_blank: '都道府県を選択', include_hidden: false}, class: 'form-control border-warning' %>-->
        <%= f.text_field :plan, :placeholder => "\uf041 エリア・スポット名", :class => 'form-control border-warning use_icon' %>
      </div>

      <div class="form-group col-sm-3">
        <%= f.collection_select :category, Category.all, :id, :category, {include_blank: "&#xf1c0; カテゴリーを選択".html_safe, include_hidden: false}, class: 'form-control border-warning use_icon' %>
      </div>
      
      <div class="form-group col-sm-3">
        <%= f.collection_select :budget, Budget.all, :id, :name, {include_blank: "&#xf157; 予算を選択".html_safe, include_hidden: false}, class: 'form-control border-warning use_icon' %>
      </div>
      
      <div class="form-group col-sm-3">
        <%= f.submit "プランを検索", :class=>"btn btn-coral w-100" %>
      </div>
      
    </div>
  <% end %>
  
</div>