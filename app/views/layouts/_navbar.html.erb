<header>
  <nav class="navbar navbar-expand-sm navbar-light bg-white">
    <div class="container-fluid">
      <a class="navbar-brand" href="/"><%= image_tag "logo.svg" %></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent">
        <span class="navbar-toggler-icon"></span>
      </button>
    
      <div class="navbar-nav form-group form-inline">
        <%= form_with(url: search_path, method: :get, local: true) do |f| %>
          <div class="input-group">
            <%= f.text_field :search, value: params[:search], placeholder: "キーワードで検索", class: 'form-control' %>
            <span class="input-group-btn">
              <%= button_tag '<i class="fas fa-search"></i>'.html_safe, :type => "submit", :class =>"btn btn-search", :style => "color:white;" %>
