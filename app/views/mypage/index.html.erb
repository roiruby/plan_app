  <div class="container-fluid">
    <% breadcrumb :mypage %>
    <%= render "layouts/breadcrumbs" %>
    <div class="row web-mt40">
      
      <div class="col-md-3">
        <%= render 'mypage/mypage_left' %>
      </div>
      
      <div class="col-md-6">
        <h3>投稿したプラン一覧 　<span class="small bold"><%= @count_plans %> プラン</span></h3>
        
        <div class="mypage-center top-planimage mt-3">
        <% @plans.each do |plan| %>
        <div class="web-flex mb-4">
          <div>
            <%= link_to image_tag(plan.image.to_s), plan_path(plan) %>
          </div>
          <div class="ml-3">
            <p><%= link_to plan.plan_title.truncate(49), plan_path(plan) %></p>
            <p class="small web-mt-8"><%= plan.content.truncate(63) %></p>
            <span class="small web-gray right">
              <p>
              <i class="far fa-clock"></i><%= plan.updated_at.strftime('%Y/%m/%d') %>
              <span class="ml-2"><i class="far fa-heart mr-1"></i><%= plan.favorites.count %></span>
              <span class="ml-1"><i class="far fa-eye mr-1"></i><%= plan.impressions_count %></span></p>
            </span>
          </div>
        </div>  
        <% end %>
        </div>
        
        <div class="pagination justify-content-end pagination-sm">
          <%= paginate @plans %>
        </div>
      </div>
      
      <div class="col-md-3">
        <div class="mypage_right">
        <image src="/assets/ad1.gif"></image>
        </div>
      </div>
      
    </div>
  </div>
