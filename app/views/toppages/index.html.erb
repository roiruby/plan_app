<% if logged_in? %>
  <p>ログインユーザ: <%= current_user.name %></p>
<% else %>
  <div class="center jumbotron">
    <div class="text-center">
      <h2> 現在ログインしていません </h2>
    </div>
  </div>
<% end %>


<% @parents.each do |parent| %>

<span class="web-flex"><%= parent.name %></span>
<% end %>

<% @parents.each do |parent| %>
<% parent.children.each do |child| %>
<%= child.name %>

<% child.children.each do |grandchild| %>
<%= grandchild.name %>
<% end %>
<% end %>
<% end %>